# Production Environment Variables for Estimate Management App
# Этот файл будет скопирован на сервер как .env

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL Database URL - настройте согласно вашему серверу
DATABASE_URL=postgresql://estimate_user:secure_password_123@localhost:5432/estimate_app_db

# Если используете внешний PostgreSQL (рекомендуется для продакшн)
POSTGRES_DB=estimate_app_db
POSTGRES_USER=estimate_user
POSTGRES_PASSWORD=secure_password_123
POSTGRES_PORT=5432

# =============================================================================
# DJANGO CONFIGURATION  
# =============================================================================
# ВАЖНО: Смените SECRET_KEY на уникальный ключ для продакшн!
SECRET_KEY=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION_TO_SOMETHING_VERY_SECURE_AND_UNIQUE

# Продакшн настройки
DEBUG=False
ALLOWED_HOSTS=195.14.122.135,localhost,app.iqbs.pro,iqbs.pro

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Разрешенные источники для CORS (frontend URLs)
CORS_ALLOWED_ORIGINS=http://195.14.122.135,https://195.14.122.135,https://app.iqbs.pro,http://app.iqbs.pro

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
# API URL для фронтенда
VITE_API_BASE_URL=https://app.iqbs.pro/api/v1

# =============================================================================  
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=noreply@iqbs.pro
SERVER_EMAIL=server@iqbs.pro

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# SSL/HTTPS настройки (раскомментируйте для HTTPS)
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True  
# CSRF_COOKIE_SECURE=True

# Trusted origins для CSRF
CSRF_TRUSTED_ORIGINS=http://195.14.122.135,https://195.14.122.135,https://app.iqbs.pro,http://app.iqbs.pro

# =============================================================================
# CACHE CONFIGURATION (Redis)
# =============================================================================
REDIS_URL=redis://:redis_password@localhost:6379/1
REDIS_PASSWORD=redis_password

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================
# Sentry для отслеживания ошибок (опционально)
# SENTRY_DSN=your_sentry_dsn_here

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
ADMIN_EMAIL=admin@iqbs.pro

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_DIR=/var/backups/estimate-app
BACKUP_S3_BUCKET=iqbs-estimate-app-backups
BACKUP_RETENTION_DAYS=30

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Максимальный размер файлов для загрузки (в байтах)
FILE_UPLOAD_MAX_MEMORY_SIZE=5242880
DATA_UPLOAD_MAX_MEMORY_SIZE=5242880

# Rate limiting
RATELIMIT_ENABLE=True